<section class="hero is-primary is-fullheight">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-6-table is-6-desktop is-6-widescreen">
          <div class="box">
            <div class="field has-text-centered">
              <strong>Modifier vos informations</strong>
            </div>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                

                <div class="field">
                  <%= f.label :"Nom et Prenom", class: "label" %>  
                  <%= f.text_field :full_name, autofocus: true, autocomplete: "full_name", class: "input"%>
                </div>

                <div class="field">
                  <%= f.label :email , class: "label"%>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input"  %>
                </div>

                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                <% end %>

                <div class="field">
                  <%= f.label :"Mot de passe", class: "label" %>
                  <%= f.password_field :password, autocomplete: "new-password", class: "input"  %>
                  <% if @minimum_password_length %>
                    <br />
                  <% end %>
                </div>

                <div class="field">
                  <%= f.label :"Confirmation mot de passe", class: "label" %>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input"  %>
                </div>

                <div class="field">
                  <%= f.label :"Nouveau mot de passe" , class: "label"%>
                  <%= f.password_field :current_password, autocomplete: "current-password", class: "input"  %>
                </div>

                <div class="field">
                  <%= f.submit "Modifier", class: "button is-danger is-fullwidth" %>
                </div>
              <% end %>
              <%= link_to "Retour", :back, class: "button is-fullwidth" %>
            </div>
        </div>
      </div>
    </div>
  </div>
</section>